<div>
  <div class="row m-0">
    <div class="col-12 col-sm-6 p-0">
        <div id="map" style="width: 100%; height: 100vh"  data-mapbox-key="<%= ENV["MAPBOX_API_KEY"] %>" data-markers="<%= @markers.to_json %>" ></div>
    </div>
    <div class="col-12 col-sm-6">
      <div class="pl-0 pt-2">
        <h3>Mowers available (<%= @mowers.count %>)</h3>
        <div class="index-cards-container">
          <% @mowers.each do |mower| %>
            <%= render partial: 'index-card', locals: {mower: mower} %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
